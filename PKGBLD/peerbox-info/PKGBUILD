pkgname=peerbox-info
pkgver=0.2
pkgrel=1
pkgdesc="Simple script to display detailed info about Peerbox node"
provides=('peerbox-info')
makedepends=('python2')
depends=('filesystem-peerbox>=0.22' 'python2-sh')
arch=('any')
license=('GPL')
source=( "${pkgname}.py" )

sha256sums=('6962e915cf486b6b85850670f5a4398da2d734a351435a85490e4cf8e14537ca')

package() {
install -Dm755 ${pkgname}.py ${pkgdir}/usr/bin/${pkgname}
}
