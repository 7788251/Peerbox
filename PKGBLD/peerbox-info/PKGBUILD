pkgname=peerbox-info
pkgver=0.1
pkgrel=1
pkgdesc="Simple script to display detailed info about Peerbox node"
provides=('peerbox-info')
depends=('filesystem-peerbox>=0.21-2' 'python2-sh')
arch=('any')
license=('GPL')
source=( "${pkgname}.py" )

sha256sums=('2884dff39e3db36dbbcaa3f33f2c2a2a5b251b92980f476e4ef792c3cceb894d')

package() {
install -Dm755 ${pkgname}.py ${pkgdir}/usr/bin/${pkgname}
}
