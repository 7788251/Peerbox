pkgname=peerbox-info
pkgver=0.24
pkgrel=1
pkgdesc="Simple script to display detailed info about Peerbox node"
provides=('peerbox-info')
makedepends=('python2')
depends=('python2-sh' 'python2-colored')
arch=('any')
license=('GPL')
source=( "${pkgname}.py" )

sha256sums=('5c7dfcfb21685d937f18b30f87dd4dfe11b4048ffbe61199365e0fb74063c0d8')

package() {
install -Dm755 ${pkgname}.py ${pkgdir}/usr/bin/${pkgname}
}
